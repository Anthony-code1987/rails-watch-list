<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://as2.ftcdn.net/v2/jpg/01/54/76/07/1000_F_154760711_C3jq59wTGrNVmIyB8DI54qkdlP6QBxZD.jpg);">
  <div class="container d-flex justify-content-center">
    <div class="justify-content-center">
      <h1>Watch List</h1>
      <p>Save any kind of movies</p>
    </div>
  </div>
</div>

<div class="cards mx-5">
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="card-category" style="background-image: url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <%= link_to list_path(list.id) do %>
            <%= list.name %>
          <% end %>
      </div>
      <% else %>
          <%= link_to list_path(list.id) do %>
            <%= list.name %>
          <% end %>
    <% end %>
  <% end %>

</div>





